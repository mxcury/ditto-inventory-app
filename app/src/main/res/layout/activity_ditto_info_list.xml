<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DittoInfoListActivity">

    <ListView
        android:id="@+id/ditto_info_list_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/info_list_bottom_line_view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/ditto_info_list_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/app_version_text_view"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/info_list_bottom_line_view"
        android:textAlignment="center"
        android:textSize="16sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>